generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Evaluation {
  id        String   @id @default(cuid())
  dealName  String
  evaluator String
  scores    Json
  notes     Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([dealName, evaluator], name: "dealName_evaluator")
}
